div(ng-if="field.type == 'radio'").uk-margin
    div(ng-repeat="option in field.options")
        label(style="font-weight:400").uk-text-bottom #[input(type="radio" name="{{field.name}}").uk-radio] {{option.label}}
        br

div(ng-if="field.type == 'checkbox'").uk-margin
    div(ng-repeat="option in field.options")
        label(style="font-weight:400").uk-text-bottom #[input(type="checkbox").uk-checkbox] {{option.label}}
        br

div(ng-if="field.type == 'select'").uk-margin
    select(ng-model="field.data" ng-options="option.label for option in field.options").uk-select.uk-form-width-small
    label(style="margin-bottom:0px; font-weight:400").uk-text-bottom.uk-text-large {{field.label}}