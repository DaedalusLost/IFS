{
    "tools": [
         {
            "displayName": "GCC Diagnostics",
            "description": "A Python script that checks C/C++ compilation with the GNU Compiler Collection",
            "author": "Jamey Fraser",
            "copyright": "Copyright © 2017",
            "license": "ISC License",
            "licenseFile": "./tools/programmingTools/c_tools/LICENSE.txt",
            "progName": "./tools/programmingTools/c_tools/programmingParser.py",
            "cmdToolName": "gcc",
            "runType": "programming",
            "filesAllowed": "zipFile",
            "parseCmd": "",
            "defaultArg": "-t gcc",
            "fileArgs": "-d",
            "options":  [
                {
                    "displayName": "Language standard",
                    "type": "select",
                    "name": "opt-gccLanguageStd",
                    "values": [ "c89", "c99","c11"],
                    "arg": "-s",
                    "params": ""
                },
                {
                    "displayName": "Standard warnings ",
                    "type": "checkbox",
                    "name": "opt-gccLanguageWarningAll",
                    "values": "",
                    "arg": "-f -Wall ",
                    "params": ""
                },
                {
                    "displayName": "Extra warnings",
                    "type": "checkbox",
                    "name": "opt-gccLanguageExtraWarning",
                    "values": "",
                    "arg": "-f -Wextra",
                    "params": ""
                },
                {
                    "displayName": "Use strict pedantic warning",
                    "type": "checkbox",
                    "name": "opt-gccLanguagePendantic",
                    "values": "",
                    "arg": "-f -pedantic",
                    "params": ""
                },
                {
                    "displayName": "Treat warnings as errors",
                    "type": "checkbox",
                    "name": "opt-gccLanguagePendanticToError",
                    "values": "",
                    "arg": "-f -pedantic-errors",
                    "params": ""
                }
            ]
        },
        {
