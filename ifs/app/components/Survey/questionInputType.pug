<!-- Holds input relating to creating inputs -->
div.row
    div.container-fluid
        div.questionNumber {{ question.number }}
        div.questionText {{ question.text }}
        hr
        div.questionType 
            div(class="row" ng-if="option.type == 'checkbox'")
                div(class="col-md-10" )
                    p {{ option.displayName }}
                div(class="col-md-2 text-center")
                    input(type="checkbox" name="{{option.name}}" id="{{option.name}}")
            div(class="row" ng-if="option.type == 'text'")
                div(class="col-md-8" )
                    p {{ option.displayName }}
                div(class="col-md-4")
                    input(type="text" name="{{option.name}}"  id="{{option.name}}")
            div(class="row" ng-if="option.type == 'select'")
                div(class="col-md-9" )
                    p {{ option.displayName }}
                div(class="col-md-3 text-center")
                   select(id="{{option.name}}" name="{{option.name}}")
                        option( ng-repeat='val in option.values') {{cl val }}