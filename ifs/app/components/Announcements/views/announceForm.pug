extends ../../../shared/views/pageLayout.pug
block content
    div.uk-container.uk-container-small.uk-margin
        h2 Announcement Creation
        p.uk-text-meta Create a new announcement that will appear globally
        div(ng-controller="announceCreate").uk-card.uk-card-default.uk-padding
            form.uk-form-stacked
                div.uk-margin
                    label.uk-form-label Title
                    .uk-form-controls
                        input(ng-model="title" placeholder='Title').uk-input
                div.uk-margin
                    label.uk-form-label Announcement Text
                    .uk-form-controls
                        textarea(id="bodyEdit" ng-model="body" rows="5").uk-textarea Type text here
                div.uk-margin
                    label.uk-form-label Expiry date
                    .uk-form-controls
                        input(ng-model="expiry" id="expiry" type="date" )
                div.uk-margin
                    button(ng-click="handleSubmit()").uk-button.uk-button-primary Create Announcement
    script(src="../components/Announcements/views/scripts/createCtrl.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.7.13/jquery.tinymce.min.js ")