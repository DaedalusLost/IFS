extends ../../shared/views/pageLayout.pug

block content
    body( ng-app='myApp' ng-controller='loginCtrl')
        div.row
            div.col-md-12.text-center
                h1 IFS 
        div.row
            div(class="col-md-6 col-md-offset-3" style="background-color:gray")
                h2 Login
                form#loginForm
                    div.form-group
                        label( for="inputEmail") Email Address
                        input( id="inputEmail"  type="email" class="form-control" placeholder="Enter Email" )
                    div.form-group
                        label( for="pwd") Email Address
                        input( id="pwd"  type="password" class="form-control" placeholder="Enter passowrd")
                    div.form-actions
                        button(type="submit" class="btn btn-primary") Login
                        a(href="#!/register" class="btn btn-link") Register

