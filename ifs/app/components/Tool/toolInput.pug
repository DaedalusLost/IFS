div(ng-if="option.type == 'checkbox'")
    span {{ option.displayName }}
    input(type="checkbox" name="{{option.name}}" id="{{option.name}}").uk-checkbox.uk-float-right

div(ng-if="option.type == 'text'")
    p {{ option.displayName }}
    input(type="text" name="{{option.name}}" id="{{option.name}}")

div(ng-if="option.type == 'select'")
    label(for="{{ option.displayName }}")
        | {{ option.displayName }}
    select(id="{{option.name}}" name="{{option.name}}").uk-select
        option( ng-repeat='val in option.values') {{ val }}
